<div class="container">
  <div class="pt-3">
      <%= form_with model: @task do |f| %>
    <div class="py-2">
      <%= f.text_field :title, placeholder: "title", class: "form-control"%>
    </div>
    <div class="py-2 pb-4">
      <%= f.text_field :details, placeholder: "details", class: "form-control"%>
    </div>
    <%= f.submit %>

  <% end %>
  </div>

</div>
