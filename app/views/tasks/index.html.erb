<div class="container">
  <div class="pt-5">
    <% @tasks.each do |task| %>
      <div class="border border-5 p-3 border-top-0 border-end-0 border-bottom-0 bg bg-light mb-3">
        <%= link_to task.title, task_path(task), class: "fw-bold text-decoration-none text-uppercase fs-4 text-success" %>
        <div class="fst-italic"> -<%= task.details %> </div>
      </div>
    <% end %>
    <%= link_to "Create a new task", new_task_path, class:"text-decoration-none text-success fw-bold ps-3"%>
  </div>
</div>
